from datetime import datetime
from uuid import uuid4

class BaseModel:
    """ Class BaseModel """

    def __init__(self, created_at='', updated_at='', id=None):
        if id is not None:
            self.id = id
        self.created_at = created_at
        self.updated_at = updated_at

    """@property
